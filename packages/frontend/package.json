{
	"name": "@pnpm-monorepo-practice/frontend",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"engineStrict": true,
	"engines": {
		"node": ">=16.20.0",
		"pnpm": ">=8.15.4"
	},
	"packageManager": "pnpm@8.15.4",
	"scripts": {
		"dev": "vite dev --host --port 3000",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "prettier --check . && eslint --fix .",
		"eslint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"test": "pnpm run test:integration && pnpm run test:unit",
		"build": "vite build",
		"clean": "rimraf --glob .svelte-kit build vite.config.ts.timestamp*.mjs",
		"preview": "vite preview",
		"start:prod": "node build"
	},
	"devDependencies": {
		"@playwright/test": "^1.42.1",
		"@skeletonlabs/skeleton": "2.2.0",
		"@skeletonlabs/tw-plugin": "0.2.1",
		"@sveltejs/adapter-auto": "^2.1.1",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.30.4",
		"@tailwindcss/forms": "0.5.6",
		"@tailwindcss/typography": "0.5.10",
		"@types/node": "20.7.1",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"autoprefixer": "10.4.17",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-svelte": "^2.35.1",
		"postcss": "8.4.35",
		"prettier": "3.2.5",
		"prettier-plugin-svelte": "3.0.3",
		"prettier-plugin-tailwindcss": "0.5.6",
		"svelte": "^4.2.12",
		"svelte-check": "^3.6.6",
		"tailwindcss": "3.3.3",
		"tslib": "^2.6.2",
		"typescript": "^5.4.2",
		"vite": "^4.5.2",
		"vite-plugin-tailwind-purgecss": "0.1.3",
		"vitest": "^0.32.4"
	},
	"dependencies": {
		"@floating-ui/dom": "1.5.3",
		"@pnpm-monorepo-practice/shared": "workspace:*",
		"@pnpm-monorepo-practice/types": "workspace:*",
		"eslint-plugin-import": "2.28.1",
		"eslint-plugin-simple-import-sort": "10.0.0"
	}
}

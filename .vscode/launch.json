	"version": "0.2.0",
	"configurations": [
		{
			"name": "Frontend: SvelteKit Node",
			"command": "pnpm p:f run dev",
			"request": "launch",
			"type": "node-terminal"
		},
		{
			"name": "Backend: Fastify Node",
			"command": "pnpm p:b run dev",
			"request": "launch",
			"type": "node-terminal"
		},
		{
			"name": "Launch Chrome on local dev docker compose frontend port 3000",
			"request": "launch",
			"type": "chrome",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}"
		}
	]
}
